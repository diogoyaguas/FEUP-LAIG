<yas>
    <scene root="scene" axis_length="10.0"/>

    <views default="perspective-terrace">
        <perspective id="perspective-front" near="0.5" far="500" angle="20">
            <from x="-150" y="70" z="-150"/>
            <to x="60" y="5.0" z="10"/>
        </perspective>
        <perspective id="perspective-entry" near="0.5" far="500" angle="60">
            <from x="80" y="30" z="-80"/>
            <to x="-10.0" y="-2.0" z="15.0"/>
        </perspective>
        <perspective id="perspective-terrace" near="0.5" far="500" angle="60">
            <from x="-10" y="15" z="7.5"/>
            <to x="10.0" y="4.0" z="7.5"/>
        </perspective>
        <perspective id="perspective-deck" near="0.5" far="500" angle="60">
            <from x="27.5" y="7" z="32.5"/>
            <to x="27.5" y="0" z="-20.0"/>
        </perspective>
        <perspective id="perspective-earth" near="0.5" far="500" angle="20">
            <from x="-45" y="30" z="-45"/>
            <to x="10" y="5.0" z="-30"/>
        </perspective>
        <perspective id="perspective-drone" near="0.5" far="500" angle="20">
            <from x="30" y="40" z="130"/>
            <to x="30" y="30" z="-20.0"/>
        </perspective>
        <ortho id="ortho-general" near="0.5" far="500" left="-50" right="50" top="50" bottom="-50">
            <from x="20" y="100" z="-15" />
            <to x="19" y="5" z="-14" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0"/>
        <background r="0.075" g="0.125" b="0.150" a="1.0"/>
    </ambient>


    <lights>
        <omni id="omni-terrace" enabled="1">
            <location x="15" y="10" z="12.5" w="1"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1.0"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0"/>
            <specular r="0.9" g="0.8" b="0.7" a="1.0"/>
        </omni>
        <omni id="omni-front" enabled="1">
            <location x="10" y="20" z="-40" w="1"/>
            <ambient r="0.5" g="0.5" b="0.5" a="1.0"/>
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0"/>
            <specular r="0.6" g="0.7" b="1.0" a="1.0"/>
        </omni>
        <omni id="omni-entry" enabled="1">
            <location x="55" y="10" z="-27.5" w="1"/>
            <ambient r="0.25" g="0.25" b="0.25" a="1.0"/>
            <diffuse r="0.35" g="0.45" b="0.25" a="1.0"/>
            <specular r="0.8" g="0.8" b="0.8" a="1.0"/>
        </omni>
        <omni id="omni-engineering" enabled="1">
            <location x="10" y="10" z="7" w="1"/>
            <ambient r="0.55" g="0.18" b="0.098" a="1.0"/>
            <diffuse r="0.55" g="0.18" b="0.098" a="1.0"/>
            <specular r="0.55" g="0.18" b="0.098" a="1.0"/>
        </omni>
        <spot id="spot-logo" enabled="1" angle="45" exponent="15">
            <location x="20" y="20" z="-39" w="1"/>
            <target x="20.5" y="20" z="-40"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="tex-stone" file="scenes/images/stone.jpg"/>
        <texture id="tex-pink" file="scenes/images/pink.jpg"/>
        <texture id="tex-window" file="scenes/images/window.jpg"/>
        <texture id="tex-wood" file="scenes/images/wood.jpg"/>
        <texture id="tex-stone2" file="scenes/images/seamless-stone.jpg"/>
        <texture id="tex-pine" file="scenes/images/pine.jpg"/>
        <texture id="tex-green" file="scenes/images/green.jpg"/>
        <texture id="tex-metal" file="scenes/images/metal.jpg"/>
        <texture id="tex-dark-grey" file="scenes/images/dark-grey.jpg"/>
        <texture id="tex-little-rocks" file="scenes/images/little-rocks.jpg"/>
        <texture id="tex-board" file="scenes/images/tabuleiro.png" />
        
    </textures>

    <materials>
        <material id="mat-default" shininess="10">
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1" />
            <diffuse r="0.678" g="0.698" b="0.741" a="1" />
            <specular r="0.03" g="0.03" b="0.03" a="1" />
        </material>
        <material id="mat-windows" shininess="10">
            <emission r="0.7" g="0.7" b="0.7" a="0"/>
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </material>
        <material id="mat-blue" shininess="1">
            <emission r="0.7" g="0.7" b="0.7" a="0"/>
            <ambient r="0.117" g="0.0.564" b="1" a="1"/>
            <diffuse r="0.0.117" g="0.0.564" b="1" a="1"/>
            <specular r="0.117" g="0.0.564" b="1" a="1"/>
        </material>
        <material id="mat-chocolate" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient r="0.82" g="0.411" b="0.117" a="1"/>
            <diffuse r="0.82" g="0.411" b="0.117" a="1"/>
            <specular r="0.82" g="0.411" b="0.117" a="1"/>
        </material>
        <material id="mat-red" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient r="0.55" g="0.18" b="0.098" a="1.0"/>
            <diffuse r="0.55" g="0.18" b="0.098" a="1.0"/>
            <specular r="0.55" g="0.18" b="0.098" a="1.0"/>
        </material>
    </materials>

    <transformations>
        <transformation id="trans-wc-windows">
            <rotate axis="y" angle="-90"/>
            <translate x="-50" y="5" z="-27.5" />
            <scale x="0.5" y="0.3" z="0.7" />
        </transformation>
        <transformation id="trans-down-windows">
            <rotate axis="y" angle="90"/>
            <translate x="8" y="0" z="49.5" />
        </transformation>
        <transformation id="trans-building1">
            <scale x="25" y="5" z="7.5" />
            <translate x="0" y="0" z="-2" />
        </transformation>
        <transformation id="trans-building2">
            <scale x="11" y="5" z="15" />
            <translate x="2.5" y="0" z="-3" />
        </transformation>
        <transformation id="trans-building3">
            <scale x="12" y="5" z="5" />
            <translate x="3" y="0" z="0" />
        </transformation>
        <transformation id="trans-building4">
            <translate x="35.2" y="0" z="0" />
            <scale x="0.5" y="5" z="8.75" />
        </transformation>
        <transformation id="trans-building5">
            <scale x="11" y="5" z="17.5" />
            <translate x="2.5" y="2" z="-2.5" />
        </transformation>
        <transformation id="trans-rooftop1">
            <scale x="25" y="0.05" z="7.5" />
            <translate x="0" y="200" z="-2" />
        </transformation>
        <transformation id="trans-rooftop2">
            <scale x="12.5" y="0.05" z="5" />
            <translate x="2.8" y="200" z="0" />
        </transformation>
        <transformation id="trans-rooftop3">
            <scale x="11" y="0.05" z="17.55" />
            <translate x="2.5" y="400" z="-2.5" />
        </transformation>
        <transformation id="trans-rooftop4">
            <scale x="11" y="0.05" z="17.55" />
            <translate x="2.5" y="200" z="-2.57" />
        </transformation>
        <transformation id="trans-stone-floor">
            <scale x="7.53" y="0.05" z="7" />
            <translate x="4.65" y="0" z="1.4" />
        </transformation>
        <transformation id="trans-exterior-floor">
            <rotate axis="x" angle="-90"/>
            <scale x="17.5" y="12" z="0.1" />
            <translate x="0" y="-2" z="0" />
        </transformation>
    </transformations>

    <animations>
        <linear id="linear1" span="15">
            <controlpoint x="0" y="0" z="0" />
            <controlpoint x="0" y="5" z="0" />
            <controlpoint x="5" y="5" z="0" />
            <controlpoint x="5" y="5" z="5" />
            <controlpoint x="0" y="5" z="5" />
            <controlpoint x="0" y="5" z="0" />
        </linear>

        <circular id="circular1" span="15" center="0 0 0" radius="2.5" startang="30" rotang="180" />
    </animations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="-1" x2="0" y2="1" z2="0" x3="0" y3="0" z3="1"/>
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="5" slices="20" loops="10" />
        </primitive>
        <primitive id="cone">
            <cylinder base="3" top="1" height="5" slices="150" stacks="150"/>
        </primitive>
        <primitive id="plane">
            <plane npartsU="50" npartsV="50" />
        </primitive>
        <primitive id="patch">
            <patch npointsU="2" npointsV="2" npartsU="5" npartsV="5">
                <controlpoint x="-5" y="0" z="-5" />
                <controlpoint x="5" y="0" z="-5" />
                <controlpoint x="-5" y="0" z="5" />
                <controlpoint x="5" y="0" z="5" />
            </patch>
        </primitive>
        <primitive id="cylinder2">
            <cylinder2 base="1" top="1" height="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="drone">
            <drone />
        </primitive>
        <primitive id="terrain">
            <terrain idtexture="tex-terrain" idheightmap="tex-terrain-heigth" parts="20" heightscale="50"/>
        </primitive >
        <primitive id="water">
            <water idtexture="tex-water" idwavemap="tex-wavemap" parts="50" heightscale="2" texscale="1" />
        </primitive >

    </primitives>

    <components>
        <component id="scene">
            <transformation>
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="mat-default" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="board"/>
                <componentref id="platform"/>
                <componentref id="black-piece"/>
                <componentref id="grey-piece"/>
            </children>
        </component>

        <component id="board">
            <transformation>
                <scale x="20" y="0.1" z="20" />
                <translate x="-1" y="0" z="-1" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-board" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="cube"/>
            </children>
        </component>

        <component id="platform">
            <transformation>
                <scale x="20" y="0.1" z="3" />
                <translate x="-1" y="0" z="-8.65" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-pine" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="cube"/>
            </children>
        </component>

        <component id="black-piece">
            <transformation>
                <scale x="1" y="0.5" z="1" />
                <translate x="0" y="1" z="-2" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-dark-grey" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>

        <component id="grey-piece">
            <transformation>
                <scale x="1" y="0.5" z="1" />
                <translate x="-2" y="1" z="-2" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-metal" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
                <scale x="2" y="2" z="2" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="side-1"/>
                <componentref id="side-2"/>
                <componentref id="side-3"/>
                <componentref id="side-4"/>
                <componentref id="side-5"/>
                <componentref id="side-6"/>
            </children>
        </component>

        <component id="side-1">            <!--TRAS-->
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="-1" y="0" z="1" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>s
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side-2">            <!--FRENTE-->
            <transformation>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side-3">            <!--ESQUERDA-->
            <transformation>
                <rotate axis="y" angle="180"/>
                <translate x="-1" y="0" z="0" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side-4">            <!--DIREITA-->
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side-5">            <!--CIMA-->
            <transformation>
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="-1" z="1" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="side-6">            <!--BAIXO-->
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="0" />
            </transformation>
            <animations>
            </animations>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

    </components>
</yas>