<yas>

<scene root="basketball-stadium" axis_length="5.5"/>

<views default="perspetiva-default">
    <ortho id="ortho" left="-20" right="20" top="20" bottom="-20" near="0.01" far="500">
        <from x="15" y="20" z="15" />
        <to x="0" y="0" z="0" />
    </ortho>
    <perspective id="perspetiva-default" near="0.01" far="500" angle="100">
        <from x="2" y="2" z="2" />
        <to x="0" y="0" z="0" />
    </perspective>
    <perspective id="aerial" near="0.01" far="500" angle="100">
        <from x="1" y="20" z="0" />
        <to x="0" y="0" z="0" />
    </perspective>
    <perspective id="fans" near="0.01" far="500" angle="30">
        <from x="0" y="30" z="0" />
        <to x="0" y="2" z="-15" />
    </perspective>
    <perspective id="ball" near="0.01" far="500" angle="30">
        <from x="15" y="20" z="15" />
        <to x="0" y="0" z="0" />
    </perspective>
</views>

<ambient>
    <ambient r="0.3" g="0.3" b="0.3" a="1" />
    <background r="0.2" g="0.8" b="0.8" a="1" />
</ambient>

<lights>
    <omni id="light1" enabled="true">
        <location x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="1" g="1" b="1" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </omni>
    <omni id="light2" enabled="true">
        <location x="-10" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="1" g="1" b="1" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </omni>
    <omni id="light3" enabled="true">
        <location x="10" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="1" g="1" b="1" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </omni>
</lights>

<textures>
    <texture id="ball-texture" file="scenes/images/basketball.png"/>
    <texture id="floor-texture" file="scenes/images/basketball-court.jpg"/>
    <texture id="table-texture" file="scenes/images/backboard.jpg"/>
    <texture id="white-metal-texture" file="scenes/images/white-metal.jpg"/>
    <texture id="orange-metal-texture" file="scenes/images/orange-metal.jpg"/>
    <texture id="net-texture" file="scenes/images/net.jpg"/>
    <texture id="seats-texture" file="scenes/images/crowd.jpg"/>
    <texture id="vidal" file="scenes/images/vidal.jpg"/>
</textures>

<materials>
    <material id="default-material" shininess="1" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="1" g="1" b="1" a="1" />
        <diffuse r="1" g="1" b="1" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </material>
    
    <material id="glass-material" shininess="100" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </material>

    <material id="metal-material" shininess="10" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <specular r="0.8" g="0.8" b="0.8" a="1" />
    </material>
    
    <material id="net-material" shininess="1" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <diffuse r="1" g="1" b="1" a="1" />
        <specular r="1" g="0.5" b="0.5" a="1" />
    </material>

    <material id="floor-material" shininess="20" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="0.8" g="0.8" b="0.8" a="1" />
        <specular r="1" g="1" b="1" a="1" />
    </material>
    
    <material id="ball-material" shininess="1" >
        <emission r="0" g="0" b="0" a="0" />
        <ambient r="1" g="0.2" b="0.2" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <specular r="0" g="0" b="0" a="1" />
    </material>

</materials>

<transformations>
    <transformation id="moveToHeaven">
        <translate x="-30" y="50" z="-30" />
        <rotate axis="x" angle="45" />
        <scale x="1" y="1" z="1" />
    </transformation>
 </transformations>

<primitives>
    <primitive id="basket-pilar-cylinder">
        <cylinder base="0.3" top="0.15" height="3.5" slices="10" stacks="10" />
    </primitive >
    <primitive id="basket-net-cylinder">
        <cylinder base="0.5" top="0.3" height="0.5" slices="6" stacks="6" />
    </primitive >
    <primitive id="basket-ring-torus">
        <torus inner="0.4" outer="0.6" slices="8" loops="8"/>
    </primitive >
    <primitive id="basket-table-rectangle">
        <rectangle x1="-1" x2="1" y1="0" y2="1" />
    </primitive >
    <primitive id="basket-table-rectangle-inverted">
        <rectangle x1="1" x2="-1" y1="0" y2="1" />
    </primitive >
    <primitive id="floor-rectangle">
        <rectangle x1="-15" x2="15" y1="-11.925" y2="11.925" />
    </primitive >
    <primitive id="ball-sphere">
        <sphere radius="0.3" slices="20" stacks="20" />
    </primitive >
    <primitive id="seats-cover-rectangle">
        <rectangle x1="-15" x2="15" y1="0" y2="5" />
    </primitive >
    <primitive id="seats-side-right-triangle">
        <triangle x1="0" y1="0" z1="0" x2="0" y2="0" z2="4.33" x3="0" y3="2.5" z3="4.33" />
    </primitive >
    <primitive id="seats-side-left-triangle">
        <triangle x1="0" y1="0" z1="0" x2="0" y2="2.5" z2="4.33" x3="0" y3="0" z3="4.33" />
    </primitive >

 </primitives >
<components>

    <component id="basketball-stadium">
        <transformation>
            <translate x="0" y="0" z="0" />
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            

            <componentref id="ball"/>
            <componentref id="seats-north"/>
            <componentref id="seats-south"/>
            <componentref id="seats-west"/>
            <componentref id="seats-east"/>

            <componentref id="floor"/>
            <componentref id="away-basket"/>
            <componentref id="home-basket"/>
        </children>
    </component>

    <!-- *********************************************-->
    <!-- *****************  BASKETS ******************-->
    <!-- *********************************************-->
    
    <component id="home-basket">
        <transformation>
            <translate x="-11.8" y="0" z="-0.2" />
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="basket-structure"/>
        </children>
    </component>

    <component id="away-basket">
        <transformation>
            <translate x="11.8" y="0" z="-0.2" />
            <rotate axis="y" angle="180"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="basket-structure"/>
        </children>
    </component>

    <component id="basket-structure">
        <transformation>
            <translate x="0" y="0" z="0" />
        </transformation>

        <materials>
            <material id="metal-material" />
        </materials>

        <texture id="white-metal-texture" length_s="1" length_t="1" />

        <children>
            <componentref id="basket-pilar"/>
            <componentref id="basket-ring"/>
            <componentref id="basket-net"/>
            <componentref id="basket-table"/>
        </children>
    </component>

    <component id="basket-pilar">
        <transformation>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <materials>
            <material id="inherit" />
        </materials>

        <texture id="white-metal-texture" length_s="1" length_t="1" />

        <children>
            <primitiveref id="basket-pilar-cylinder"/>
        </children>
    </component>

    <component id="basket-ring">
        <transformation>
            <translate x="0.7" y="3" z="0"/>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <materials>
            <material id="inherit" />
        </materials>

        <texture id="orange-metal-texture" length_s="1" length_t="1" />

        <children>
            <primitiveref id="basket-ring-torus"/>
        </children>
    </component>

    <component id="basket-net">
        <transformation>
            <translate x="0.7" y="3" z="0"/>
            <rotate axis="x" angle="90"/>
        </transformation>

        <materials>
            <material id="net-material" />
        </materials>

        <texture id="net-texture" length_s="1" length_t="1" />

        <children>
            <primitiveref id="basket-net-cylinder"/>
        </children>
    </component>

    <component id="basket-table">
        <transformation>
            <translate x="0.2" y="3" z="0"/>
            <rotate axis="y" angle="90"/>
        </transformation>

        <materials>
            <material id="glass-material" />
        </materials>

        <texture id="table-texture" length_s="2" length_t="1" />

        <children>
            <primitiveref id="basket-table-rectangle"/>
            <primitiveref id="basket-table-rectangle-inverted"/>
        </children>
    </component>

    <!-- ****************************************************** -->
    <!-- ************************ FLOOR *********************** -->
    <!-- ****************************************************** -->

    <component id="floor">
        <transformation>
            <rotate axis="x" angle="-90"/>
        </transformation>

        <materials>
            <material id="floor-material" />
        </materials>

        <texture id="floor-texture" length_s="30" length_t="24" />

        <children>
            <primitiveref id="floor-rectangle"/>
        </children>
    </component>


    <!-- ****************************************************** -->
    <!-- ************************ BALL ************************ -->
    <!-- ****************************************************** -->

    <component id="ball">
        <transformation>
            <translate x="0" y="0.3" z="0"/>
        </transformation>

        <materials>
            <material id="ball-material" />
        </materials>

        <texture id="ball-texture" length_s="1" length_t="1" />

        <children>
            <primitiveref id="ball-sphere"/>
        </children>
    </component>

    <!-- ****************************************************** -->
    <!-- ************************ SEATS *********************** -->
    <!-- ****************************************************** -->

    <component id="seats-north">
        <transformation>
            <translate x="0" y="0" z="11.925"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="seats-cover"/>
            <componentref id="seats-sides"/>
        </children>
    </component>

    <component id="seats-south">
        <transformation>
            <translate x="0" y="0" z="-11.925"/>
            <rotate axis="y" angle="180"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="seats-cover"/>
            <componentref id="seats-sides"/>
        </children>
    </component>

    <component id="seats-west">
        <transformation>
            <rotate axis="y" angle="90"/>
            <translate x="0" y="0" z="15"/>
            <scale x="0.795" y="1" z="1"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="seats-cover"/>
            <componentref id="seats-sides"/>
        </children>
    </component>

    <component id="seats-east">
        <transformation>
            <rotate axis="y" angle="-90"/>
            <translate x="0" y="0" z="15"/>
            <scale x="0.795" y="1" z="1"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="none" length_s="1" length_t="1" />

        <children>
            <componentref id="seats-cover"/>
            <componentref id="seats-sides"/>
        </children>
    </component>

    <component id="seats-cover">
        <transformation>
            <rotate axis="y" angle="180"/>
            <rotate axis="x" angle="-60"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="seats-texture" length_s="20" length_t="5" />

        <children>
            <primitiveref id="seats-cover-rectangle"/>
        </children>
    </component>

    <component id="seats-sides">
        <transformation>
            <translate x="0" y="0" z="0"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="white-metal-texture" length_s="1" length_t="1" />

        <children>
            <componentref id="seats-side-right"/>
            <componentref id="seats-side-left"/>
        </children>
    </component>

    <component id="seats-side-right">
        <transformation>
            <translate x="-15" y="0" z="0"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="inherit" length_s="5" length_t="5" />

        <children>
            <primitiveref id="seats-side-right-triangle"/>
        </children>
    </component>

    <component id="seats-side-left">
        <transformation>
            <translate x="15" y="0" z="0"/>
        </transformation>

        <materials>
            <material id="default-material" />
        </materials>

        <texture id="inherit" length_s="5" length_t="5" />

        <children>
            <primitiveref id="seats-side-left-triangle"/>
        </children>
    </component>



</components>
</yas>