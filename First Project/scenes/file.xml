<yas>
    <scene root="scene" axis_length="10.0"/>

    <views default="perspective-0">
        <perspective id="perspective-0" near="0.5" far="500" angle="20">
            <from x="-25.0" y="18.0" z="20"/>
            <to x="60.0" y="-25.0" z="-20.0"/>
        </perspective>
        <perspective id="perspective-1" near="0.5" far="500" angle="60">
            <from x="5" y="3" z="1"/>
            <to x="-10.0" y="-2.0" z="15.0"/>
        </perspective>
        <perspective id="perspective-2" near="0.5" far="500" angle="60">
            <from x="5" y="5" z="5"/>
            <to x="10.0" y="4.0" z="5.0"/>
        </perspective>
        <perspective id="perspective-3" near="0.5" far="500" angle="60">
            <from x="-30" y="3" z="5"/>
            <to x="10.0" y="5.0" z="5.0"/>
        </perspective>
        <ortho id="ortho-1" near="0.5" far="500" left="-5" right="5" top="2.5" bottom="-2.5">
            <from x="-25.0" y="18.0" z="20" />
            <to x="60.0" y="-25.0" z="-20.0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.4" g="0.4" b="0.4" a="1.0"/>
        <background r="0.075" g="0.125" b="0.150" a="1.0"/>
    </ambient>


    <lights>
        <omni id="omni-0" enabled="1">
            <location x="12" y="10" z="7" w="1"/>
            <ambient r="0.2" g="0.2" b="0.2" a="1.0"/>
            <diffuse r="0.3" g="0.4" b="0.25" a="1.0"/>
            <specular r="0.9" g="0.8" b="0.7" a="1.0"/>
        </omni>
        <omni id="omni-1" enabled="1">
            <location x="3" y="10" z="7" w="1"/>
            <ambient r="0.15" g="0.20" b="0.25" a="1.0"/>
            <diffuse r="0.2" g="0.25" b="0.35" a="1.0"/>
            <specular r="0.6" g="0.7" b="1.0" a="1.0"/>
        </omni>
        <omni id="omni-2" enabled="1">
            <location x="-3" y="10" z="7" w="1"/>
            <ambient r="0.15" g="0.15" b="0.15" a="1.0"/>
            <diffuse r="0.35" g="0.45" b="0.25" a="1.0"/>
            <specular r="0.8" g="0.8" b="0.8" a="1.0"/>
        </omni>
        <omni id="omni-3" enabled="1">
            <location x="-13" y="10" z="7" w="1"/>
            <ambient r="0.20" g="0.25" b="0.15" a="1.0"/>
            <diffuse r="0.25" g="1.0" b="1.0" a="1.0"/>
            <specular r="0.3" g="0.6" b="0.9" a="1.0"/>
        </omni>
        <spot id="spot-4" enabled="1" angle="45" exponent="15">
            <location x="17" y="5" z="0.5" w="1"/>
            <target x="45" y="0" z="10"/>
            <ambient r="0.10" g="0.25" b="0.15" a="1"/>
            <diffuse r="0.3" g="0.15" b="0.25" a="1"/>
            <specular r="0.7" g="0.8" b="0.6" a="1"/>
        </spot>
    </lights>

    <textures>
        <texture id="tex-stone" file="scenes/images/stone.jpg"/>
        <texture id="tex-pink" file="scenes/images/pink.png"/>
        <texture id="tex-window" file="scenes/images/window.jpg"/>
        <texture id="tex-wood" file="scenes/images/wood.jpg"/>
        <texture id="tex-stone2" file="scenes/images/seamless-stone.jpg"/>
        <texture id="tex-pine" file="scenes/images/pine.jpg"/>
        <texture id="tex-green" file="scenes/images/green.jpg"/>
        <texture id="tex-somersby" file="scenes/images/somersby.jpg"/>
        <texture id="tex-red" file="scenes/images/red.jpg"/>
        <texture id="tex-superbock" file="scenes/images/superbock.jpg"/>
        <texture id="tex-metal" file="scenes/images/metal.jpg"/>
        <texture id="tex-dark-grey" file="scenes/images/dark-grey.jpg"/>
    </textures>

    <materials>
        <material id="mat-1" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="0"/>
            <ambient r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.5" a="1"/>
            <specular r="0.5" g="0.7" b="0.8" a="1"/>
        </material>
        <material id="mat-2" shininess="1">
            <emission r="0.3" g="0.3" b="0.3" a="0"/>
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </material>
        <material id="mat-3" shininess="1">
            <emission r="1" g="0.3" b="0.3" a="0"/>
            <ambient r="1" g="0.1" b="0.1" a="1"/>
            <diffuse r="1" g="0.5" b="0.5" a="1"/>
            <specular r="1" g="0.7" b="0.7" a="1"/>
        </material>
    </materials>

    <transformations>
        <transformation id="show-0">
            <translate x="0" y="0" z="0"/>
            <rotate axis="x" angle="-90"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="-1" x2="0" y2="1" z2="0" x3="0" y3="0" z3="1"/>
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="0" y1="1" x2="1" y2="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="1" top="1" height="1" stacks="1" slices="64"/>
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" stacks="32" slices="64"/>
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="2" slices="32" loops="1"/>
        </primitive>
        <primitive id="cone">
            <cylinder base="3" top="1" height="5" slices="150" stacks="150"/>
        </primitive>
    </primitives>

    <components>
        <component id="scene">
            <transformation>
            </transformation>
            <materials>
                <material id="mat-1"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="floors"/>
                <componentref id="walls"/>
            </children>
        </component>

        <component id="floors">
            <transformation>
            </transformation>
            <materials>
                <material id="mat-2"/>
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="floor-1"/>
            </children>
        </component>

        <component id="floor-1">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <scale x="35" y="17.5" z="1" />
                <translate x="0" y="-1" z="0" />
            </transformation>
            <materials>
                <material id="inherit"/>
                <material id="mat-3"/>
            </materials>
            <texture id="tex-stone" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="walls">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-pink" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="wall-1"/>
                <componentref id="wall-2"/>
            </children>
        </component>

        <component id="wall-1">
            <transformation>
                <scale x="35" y="10" z="1" />
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="wall-2">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <scale x="17.5" y="10" z="1" />
                <translate x="0" y="0" z="-35" />
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="tex-somersby" length_s="0.1" length_t="0.1"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

    </components>
</yas>